@model IdentityServer4.Contrib.Membership.IdsvrDemo.Models.EmailViewModel

<div class="login-page">
    <div class="page-header">
        <h1>Définir un nouveau mot de passe</h1>
    </div>

    @Html.Partial("_ValidationSummary")

    <div class="row">

        @if (Model.EnablePasswordReset)
        {
            <div class="col-sm-6">
                <div class="panel panel-default">
                    @if (Model.TokenExpired)
                    {
                        <div class="panel-heading">
                            <h3 class="panel-title">Définition Mot de Passe</h3>
                            Votre lien sécurisé a expiré. Pour recevoir de nouveau l'email, renseignez votre identifiant ci-dessous.
                        </div>
                    }
                    <div class="panel-body">
                        <form asp-route="">
                            <input type="hidden" asp-for="Purpose" />
                            <fieldset>
                                <div class="form-group">
                                    <label asp-for="EmailAddress"></label>
                                    <input class="form-control" placeholder="Email" asp-for="EmailAddress" autofocus />
                                </div>
                                <div class="form-group">
                                    <button class="btn btn-primary" name="button" value="reset">Next</button>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
